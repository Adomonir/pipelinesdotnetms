{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vnetName": {
            "type": "string",
            "minLength": 2,
            "metadata": {
                "description": "The name of the vNet."
            }
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "The location of the vNet and resources along"
            }
        }
    },
    "variables": {
        "subnet_name": "subnet1",
        "vnet_addressPrefixes": ["10.0.0.0/16"],
        "subnet_addressPrefix": ["10.0.0.1/24"]
    },
    "resources": [
        {
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2019-04-01",
            "name": "[parameters('vnetName')]",
            "location": "[parameters('location')]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": "[variables('vnet_addressPrefixes')]"
                }
            },
            "resources": [
                {
                    "type": "subnets",
                    "name": "[variables('subnet_name')]",
                    "apiVersion": "2019-04-01",
                    "dependsOn": ["[parameters('vnetName')]"],
                    "properties": {
                        "addressPrefix": "[variables('subnet_addressPrefix')]"
                    }
                }
            ]
        }
    ]
}